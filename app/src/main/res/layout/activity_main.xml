<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mail_status_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:background="#FF0000">

            <ImageView
                android:id="@+id/mail_status_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/close_email" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:background="#ff8000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HistÃ³rico"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/door_status_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="#00FF00">

            <ImageView
                android:id="@+id/door_status_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/close_door" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:background="#993366"/>

    </LinearLayout>

</LinearLayout>